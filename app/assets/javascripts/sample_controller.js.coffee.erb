app = angular.module "myApp", ["ngRoute"]
app.config ["$routeProvider", "$locationProvider", ($routeProvider, $locationProvider) ->
    $routeProvider
    .when "/",
      templateUrl: '<%= asset_path("sample-view.html") %>'
      controller: "CompanyController"
  ]

app.controller "CompanyController", [ "$scope", ($scope) ->
    self = this

    $scope.company =
      name: 'Tan'
    $scope.companyList = []

    $scope.addCompany = ->
      $scope.companyList.push($scope.company)
      $scope.company =
        name: 'Tan'

    self
  ]
